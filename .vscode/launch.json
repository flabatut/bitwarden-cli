    "version": "0.2.0",
    "configurations": [
        {
            "name": "lint",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "lint"
            ],
        },
        {
            "name": "build",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "build"
            ],
            "env": {
                "BWCLI_USERNAME": "joe",
                "GITHUB_TOKEN": "pass"
            }
        }
    ]
}