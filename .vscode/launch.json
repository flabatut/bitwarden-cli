    "version": "0.2.0",
    "configurations": [
        {
            "name": "lint",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "lint"
            ],
        },
        {
            "name": "build",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "build"
            ]
        },
        {
            "name": "publish image",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "publish",
                "image"
            ],
            "envFile": "${workspaceFolder}/.env",
        },
        {
            "name": "publish artifact",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${workspaceFolder}",
            "args": [
                "publish",
                "artifact"
            ],
            "envFile": "${workspaceFolder}/.env",
        }
    ]
}